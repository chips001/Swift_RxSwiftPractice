platform :ios, "8.0"

target 'Swift_RxSwiftPractice' do 
use_frameworks!
  
  # RxSwift使用時に必要なライブラリ
  pod 'RxSwift', '~> 4.2.0'
  pod 'RxCocoa', '~> 4.2.0'
  # TableViewやCollectionViewのDataSourceをRxSwiftで扱うのに必要なライブラリ
  pod 'RxDataSources', '~> 3.0.2'
  # 便利ライブラリ
  pod 'RxAlamofire/RxCocoa'
  pod 'ObjectMapper'

end
